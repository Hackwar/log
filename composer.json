{
    "name": "joomla/log",
    "type": "joomla-package",
    "description": "Joomla Log Package",
    "keywords": ["joomla", "framework", "log"],
    "homepage": "https://github.com/joomla-framework/log",
    "license": "GPL-2.0+",
    "require": {
        "php": "^5.3.10|~7.0",
        "joomla/date": "~1.0",
        "joomla/filesystem": "~1.0",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "joomla/database": "~1.0",
        "joomla/test": "~1.0",
        "phpunit/phpunit": "^4.8.35|^5.4.3|~6.0",
        "phpunit/dbunit": "~1.3|~2.0",
        "squizlabs/php_codesniffer": "1.*"
    },
    "suggest": {
        "joomla/database": "Install joomla/database to use the database logger."
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Log\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Log\\Tests\\": "Tests/"
        }
    }
}
